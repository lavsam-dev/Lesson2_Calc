<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="theme_calc_black" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="calcKeysMaterial" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">@font/lucida_calc</item>
        <item name="android:layout_width">@dimen/key_width</item>
        <item name="android:layout_height">@dimen/key_height</item>
        <item name="android:alpha">@dimen/key_alpha</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="calcKeysMaterial.digits">
        <item name="android:textColor">@color/colorMediumGray</item>
        <item name="backgroundTint">@color/colorDigits</item>
    </style>

    <style name="calcKeysMaterial.actions">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="backgroundTint">@color/colorBackgroundActions</item>
    </style>

    <style name="calcKeysMaterial.C_CE">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="backgroundTint">@color/colorC_CE</item>
    </style>

    <style name="calcKeysMaterial.Result">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="backgroundTint">@color/colorResult</item>
    </style>

    <style name="calcTV">
        <item name="android:background">@color/colorDarkBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_textSize</item>
    </style>

    <style name="calcIV">
        <item name="android:src">@drawable/background_metal</item>
        <item name="android:contentDescription">@string/background_image</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>